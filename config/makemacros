%pgversion PG_MAJOR
%fdw_version FDW_RELEASE
%_signature gpg
%_gpg_name PackageManager
%_gpg_path ~/.gnupg
%_gpg_digest_algo sha256
%__gpg_sign_cmd %{__gpg} gpg --batch --yes --no-armor --pinentry-mode loopback --passphrase GPG_PASSPHRASE --detach-sign --digest-algo sha256 -u %{_gpg_name} -sbo %{__signature_filename} %{__plaintext_filename}